<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <TextView
        android:id="@+id/textEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search for Bluetooth Module"
        android:textSize="25sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clock Options"
                android:id="@+id/btnClockOptions" android:layout_column="0" android:clickable="true"
                android:enabled="true" android:focusable="false" android:onClick="onBtnClicked"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:minWidth="150dp" />

        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Radio" android:id="@+id/btnRadio" android:layout_column="1"
                android:clickable="true" android:enabled="true" android:focusable="false"
                android:onClick="onBtnClicked" android:singleLine="false"
            android:minWidth="150dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btnGasSensor" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gas Sensor"
            android:id="@+id/btnGasSensor"
            android:layout_column="1"
            android:clickable="true"
            android:enabled="true"
            android:focusable="false"
            android:onClick="onBtnClicked"
            android:singleLine="false"
            android:minWidth="150dp"
            android:layout_below="@+id/btnClockOptions"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</LinearLayout>

